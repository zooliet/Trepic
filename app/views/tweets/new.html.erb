<div class="container content">
  <h1>form_for</h1>

  <div class="row">
    <div class="col-sm-12">
      <%= form_for @tweet do |f| %>
        <div class="field">
          <%= f.label :status %><br>
          <%= f.text_field :status %>
        </div>

        <div class="field">
          <%= f.label :zombie_id %><br>
          <%= f.collection_select :zombie_id, Zombie.all, :id, :name %>
        </div>

        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>

  <hr>
  <h1>form_for with Bootstrap</h1>

  <div class="row">
    <div class="col-sm-6">
      <%= form_for @tweet do |f| %>
        <div class="form-group field">
          <%= f.label :status %>
          <%= f.text_field :status, class: 'form-control' %>
        </div>

        <div class="form-group field">
          <%= f.label :zombie_id %>
          <%= f.collection_select :zombie_id, Zombie.all, :id, :name %>
        </div>

        <div class="form-group">
          <%= f.submit class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

<hr>
  <h1>form_tag with Bootstrap</h1>

  <div class="row">
    <div class="col-sm-6">
      <%= form_tag tweets_path do  %>
        <div class="form-group">
          <%= label_tag :tweet_status %>
          <%= text_field_tag "tweet[status]", @tweet.status, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= label_tag :tweet_zombie_id %>
          <%= collection_select :tweet, :zombie_id, Zombie.all, :id, :name %>
        </div>

        <div class="form-group">
          <%= submit_tag 'Submit', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

</div>
