<div class='container content'>
  <% if @zombie.present? %>
    <h1><%= @zombie.name %>'s tweets</h1>
  <% else %>
    <h1>Tweets</h1>
  <% end %>

  <% if @tweets.size.zero? %>
    <p class='lead text-muted'>No tweets are available.</p>
  <% else %>
    <table class='table'>
      <tr>
        <th>Status</th>
        <th>Zombie</th>
        <th></th>
      </tr>

      <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.status %></td>
        <td><%= link_to tweet.zombie.name, tweet.zombie %></td>
        <td>
          <%= link_to 'Show', tweet, class: 'btn btn-success btn-xs' %>
          <%= link_to 'Remove', tweet, method: :delete, class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
      <% end %>
    </table>
  <% end %>

  <% if @zombie.present? %>
    <%= link_to 'All tweets', tweets_path %>
  <% end %>
</div>
