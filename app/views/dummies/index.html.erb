<p id="notice"><%= notice %></p>

<h1>Listing Dummies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dummies.each do |dummy| %>
      <tr>
        <td><%= dummy.name %></td>
        <td><%= dummy.description %></td>
        <td><%= link_to 'Show', dummy %></td>
        <td><%= link_to 'Edit', edit_dummy_path(dummy) %></td>
        <td><%= link_to 'Destroy', dummy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

